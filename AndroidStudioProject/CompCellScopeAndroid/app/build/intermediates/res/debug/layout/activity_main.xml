<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/connStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="NOT CONNECTED TO ARRAY"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/connDeviceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/connMACAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="0.47">

        <Button
            android:id="@+id/btnConnectBluetooth"
            android:layout_width="322dp"
            android:layout_height="match_parent"
            android:layout_marginTop="21dp"
            android:text="Connect to Array..."
            android:textStyle="normal"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acquire"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnMultiModeViewer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Multi-Contrast Live Viewer" />

        <Button
            android:id="@+id/btnAcquireFullScan"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Fourier Ptychography" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnAcquireMuitimode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-Contrast" />

            <Button
                android:id="@+id/btnAcquireBFScan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:text="Focal Scan" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Process"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/grid">

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="View Dataset"
                android:layout_gravity="center_horizontal|left"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:text="qDPC"
                android:id="@+id/btnQDPC"
                android:layout_gravity="center_horizontal|left"
                android:layout_row="1"
                android:layout_column="1" />

        </GridLayout>

        <Button
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:text="FPM PP"
            android:id="@+id/btnFPMProcessing"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:layout_column="0" />


        //Button For Testing qDPC and Refocusing

    </LinearLayout>


</LinearLayout><!-- From: file:/Users/zfphil/develop/CompCellScopeAndroid_Development/AndroidStudioProject/CompCellScopeAndroid/app/src/main/res/layout/activity_main.xml -->